@using DatingApplication.Models
@if (UserValidation.GetLogin(Request) != null)
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Manage", "Manage", "Home", routeValues: null, htmlAttributes: new { id = "ManageAccount" })</li>
        <li onclick="Logout()">Logout</li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Home", routeValues: null, htmlAttributes: new { id = "Register" })</li>
        <li>@Html.ActionLink("Log in", "LogIn", "Home", routeValues: null, htmlAttributes: new { id = "LogIn" })</li>
    </ul>
}


<script>
    function Logout() {
        deleteAllCookies();
        document.location.href = "http://localhost:53221";
    }
    function deleteAllCookies() {
        var cookies = document.cookie.split(";");

        for (var i = 0; i < cookies.length; i++) {
            var cookie = cookies[i];
            var eqPos = cookie.indexOf("=");
            var name = eqPos > -1 ? cookie.substr(0, eqPos) : cookie;
            document.cookie = name + "=;expires=Thu, 01 Jan 1970 00:00:00 UTC; Path=/";
        }
    }
</script>